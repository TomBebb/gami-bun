{
    "name": "@gami/main",
    "type": "module",
    "author": {
      "email": "tombebb@protonmail.com",
      "name": "Tom Bebbington",
      "url": "https://github.com/TomBebb"
    },
    "scripts": {
      "dev": "bun src/main.ts",
      "build": "concurrently bun:build:linux bun:build:windows-x64 bun:build:darwin",
      "build:linux": "concurrently bun:build:linux-x64 bun:build:linux-arm64",
      "build:linux-x64": "bun build --minify --compile --target=bun-linux-x64 ./src/main.ts --outfile publish/gami-linux-x64",
      "build:linux-arm64": "bun build --minify --compile --target=bun-linux-arm64 ./src/main.ts --outfile publish/gami-linux-arm64",
      "build:windows-x64": "bun build --minify --compile --target=bun-windows-x64 ./src/main.ts --outfile publish/gami-windows-x64.exe",
      "build:darwin": "concurrently bun:build:darwin-x64 bun:build:darwin-arm64",
      "build:darwin-x64": "bun build --minify --compile --target=bun-darwin-x64 ./src/main.ts --outfile publish/gami-darwin-x64",
      "build:darwin-arm64": "bun build --minify --compile --target=bun-darwin-arm64 ./src/main.ts --outfile publish/gami-darwin-arm64",
    },
    "dependencies": {
      "webview-bun": "^2.3.0"
    },
    "devDependencies": {
      "@types/bun": "^1.1.13",
      "concurrently": "^9.1.0"
    }
  }
  